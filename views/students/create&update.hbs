<h3>{{viewTitle}}</h3>

<form action="/" method="post">
<input type="hidden" name="_id" value="{{student._id}}">
    <div class="form-group">
        <label for="name">Full Name :</label>
        <input type="text" class="form-control" name="name" placeholder="Write your Full Name" />
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="id">ID :</label>
            <input type="text" class="form-control" name="id" placeholder="Write your ID Number" />
        </div>
        <div class="form-group col-md-6">
            <label for="phone">Mobile Number :</label>
            <input type="text" class="form-control" name="phone" placeholder="Write your Mobile Number" />
        </div>
    </div>
    <div class="form-group">
        <label for="address">Address :</label>
        <input type="text" class="form-control" name="address" placeholder="Write your Address" />
    </div>
      <div class="from-group">
        <button type="submit" class="btn btn-info"><i class="fas fa-database"></i> Submit</button>
        <a class="btn btn-success" href="/list"><i class="fas fa-list"></i> &nbsp;All List</a>
    </div>
</form>